---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Contact from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Muxu',
};
---

<Layout metadata={metadata}>

  <!-- Contact Widget ************** -->
  <Contact
    title="Contact Us"
    subtitle="Use the form below and our team will get in touch."
    tagline=""
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Full Name',
        placeholder: 'Please state your full name'
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
        placeholder: 'someone@email.com'
      },
    ]}
    textarea={{
      label: 'Message',
      placeholder: 'Let us know about your project, the more details the better.'
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description='Our team will usually get in touch within 48 hours.'
  /Contact>

</Layout>
